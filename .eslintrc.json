{
  "parserOptions": {
    "ecmaVersion": 7
  },
  "extends": "airbnb-base/legacy",
  "env": {
    "es6": true,
    "node": true,
    "jest": true,
    "browser": true,
    "commonjs": true
  },
  "rules": {
    "quotes": ["error", "single", { "allowTemplateLiterals": true }],
    "comma-dangle": ["error", "always-multiline"],
    "no-console": "off",
    "no-unused-vars": "off",
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "semi": ["error", "always"],
    "arrow-parens": [0],
    "no-trailing-spaces": [0],
    "function-paren-newline": [0],
    "no-multi-assign": [0],
    "space-infix-ops": ["error", { "int32Hint": false }],
    "func-names": [0],
    "no-param-reassign": [0], 
    "no-underscore-dangle": [0],
    "no-plusplus": [0],
    "curly": [0],
    "no-nested-ternary": [0]
  },
  "globals": {
    "API_URL": false,
    "next": true
  }
}
